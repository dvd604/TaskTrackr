<%- include('../partials/head.ejs') %>
<%- include('../partials/nav.ejs') %>

<% if (errors){ %>
    <%- include('../partials/alertModal.ejs', {modalTitle: "Failed to login", modalText: errors}) %>
<% } %>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form class="p-3" style="max-width: 970px;" method="POST">
                <div class="form-group p-3">
                    <label for="inputEmail">Email address</label>

                    <% let text = '';
                    if (email)
                        text = email;
                    %>
                    <input name="email" type="email" class="form-control" id="inputEmail" aria-describedby="emailHelp"
                           placeholder="Enter email" value="<%= text %>">
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                        else.</small>
                </div>
                <div class="form-group p-3">
                    <label for="inputPassword">Password</label>
                    <input name="password" type="password" class="form-control" id="inputPassword"
                           placeholder="Password" autocomplete="off">
                </div>
                <div class="px-3 text-center">
                    <button type="submit" class="btn btn-primary p-3">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
<%- include('../partials/foot.ejs') %>