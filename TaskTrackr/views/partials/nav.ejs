<nav class="navbar navbar-expand-lg bg-body-tertiary fixed-top px-3">
    <a href="/" class="navbar-brand mx-2">Task Trackr</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <% if (!locals.error) { %>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <% if (locals.loggedin) { %>
                    <% locals.navLinks.forEach(nav => { %>
                        <li class="nav-item mx-2"><a href="<%= nav.link %>"
                                                     class="nav-link <% if(locals.curPath === nav.link){ %>active<% } %>"><%= nav.text %></a>
                        </li>
                    <% }) %>
                    <li class="nav-item mx-2"><a href="/auth/logout" class="nav-link">Logout</a></li>
                <% } else { %>
                        <% locals.loginLinks.forEach(nav => { %>
                            <li class="nav-item mx-2"><a href="<%= nav.link %>"
                                                         class="nav-link <% if(locals.curPath === nav.link){ %>active<% } %>"><%= nav.text %></a>
                            </li>
                        <% }) %>
                <% } %>
            </ul>
        </div>
    <% } %>
</nav>
